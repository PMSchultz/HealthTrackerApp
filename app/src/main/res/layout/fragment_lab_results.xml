<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:layout_margin="16dp"
  tools:context="edu.cnm.deepdive.healthtracker.mainfragments.LabResultsFragment">

  <EditText
    android:id="@+id/lab_facility"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="100dp"
    android:paddingBottom="10dp"
    android:hint="Lab facility"
    android:textSize="20dp"/>

  <Button
    android:id="@+id/labwork_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/lab_facility"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:onClick="showDatePickerDialog"
    android:text="Date"
    android:textAlignment="viewStart"/>

  <EditText
    android:id="@+id/provider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/labwork_date"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:hint="Ordering provider"/>

  <EditText
    android:id="@+id/note"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:inputType="textMultiLine"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:hint="Notes:"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignBottom="@+id/parentPanel"
    android:orientation="horizontal">
    <Button
      android:id="@+id/save_labwork_record"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_marginRight="25dp"
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:text="Save"/>

    <Button
      android:id="@+id/delete_labwork_record"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:text="Delete"/>

    <Button
      android:id="@+id/cancel_labwork_record"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:layout_marginLeft="25dp"
      android:text="Cancel"/>
  </LinearLayout>

</LinearLayout>
